@model IEnumerable<AppEmpreza.Entidades.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @* <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Crear</a> *@
    <a href="#" class="btn btn-primary" id="openCreateModal"><i class="bi bi-plus-circle"></i> Crear</a>
</p>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ciudad)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ciudad)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>    Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="bi bi-book-fill"></i> Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-primary" role="alert">
        @successMessage
    </div>
}
<div id="modal-container" class="modal fade"  tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content" style="height:500px; background-color: dimgray;">
            <!-- El contenido del modal se cargará aquí -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#openCreateModal').on('click', function () {
                $.get('@Url.Action("Create", "Departamentos")', function (data) {
                    $('#modal-container .modal-content').html(data);
                    $('#modal-container').modal({
                        backdrop: 'static',
                        keyboard: false,
                        show: true
                    });
                    $('#modal-container').modal('show');
                });
            });
        });
    </script>

}
